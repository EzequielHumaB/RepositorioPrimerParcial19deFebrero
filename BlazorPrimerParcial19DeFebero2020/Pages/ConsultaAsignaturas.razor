@page "/ConsultaAsignaturas"

<h3>Consulta de asignaturas</h3>

@if(Asignaturas == null)
{
    <p>No hay datos</p>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>AsignaturaId</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Perrequesitos</th>
                <th>Creditos</th>
                <th>EstudianteId</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Asignaturas)
            {
                <tr>
                    <td>@item.AsignaturaId</td>
                    <td>@item.Codigo</td>
                    <td>@item.Descripcion</td>
                    <td>@item.PreRequisitos</td>
                    <td>@item.Creditos</td>
                    <td>@item.EstudianteId</td>
                    <td><a class="btn btn-outline-success" href="Asignaturas/@item.AsignaturaId">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Asignaturas> Asignaturas = new List<Asignaturas>();
    AsignaturasControllers AsignaturasControllers = new AsignaturasControllers();

    protected override void OnInitialized()
    {
        Asignaturas = AsignaturasControllers.GetList(p => true);
    }
}
