@page "/Consulta"

<h3>Consulta</h3>

@if (Inscripcion == null)
{
    <p>No hay datos</p>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Semestres</th>
                <th>Limite de creditos</th>
                <th>Creditos Tomados en el semestre</th>
                <th>Disponibles en el semestre</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Inscripcion)
            {
            <tr>
                <td>@item.InscripcionId</td>
                <td>@item.Semestre</td>
                <td>@item.Limite</td>
                <td>@item.Tomados</td>
                <td>@item.Disponibles</td>
                <td>
                    <a class="btn btn-outline-success" href="Inscripcion/@item.InscripcionId">Ver</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    }

@code {
    List<Inscripcion> Inscripcion = new List<Inscripcion>();
    InscripcionControllers InscripcionControllers = new InscripcionControllers();


    protected override void OnInitialized()
    {
        Inscripcion = InscripcionControllers.GetList(p => true);
    }

}
